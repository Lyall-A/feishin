{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/i18n/**/*", "src/types/**/*", "src/shared/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "/@/renderer/*": [
        "src/renderer/*"
      ],
      "/@/main/*": [
        "src/main/src/*"
      ],
      "/@/preload/*": [
        "src/preload/*"
      ],
      "/@/shared/*": [
        "src/shared/*"
      ],
    }
  }
}
