{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.tsx",
    "src/preload/*.d.ts",
    "src/i18n/**/*",
    "package.json"
  ],
  "compilerOptions": {
    "outDir": "./out",
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "/@/renderer/*": [
        "src/renderer/*"
      ],
      "/@/main/*": [
        "src/main/src/*"
      ],
      "/@/shared/*": [
        "src/shared/src/*"
      ],
      "/@/i18n/*": [
        "src/i18n/*"
      ]
    }
  },
}
